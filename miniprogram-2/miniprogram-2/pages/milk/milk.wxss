/* pages/milk/milk.wxss */
.swiper{
  height: auto;
}
.swiper-con{
  height:1500rpx;
}
.swiper-image{
  width: 100%;
  height:100%;
}

/* 顶部导航栏 */
.tab-container {
  background-color: #f5f5f5;
}
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #f0ece6;
  padding: 20rpx 0; 
  position: sticky;
  top: 0;
  z-index: 99;
  border-bottom: 1px solid #e5e5e5;
}
.tab-item {
  font-size: 28rpx;
  color: #666;
  padding-bottom: 10rpx;
}
.tab-item.active {
  color: #0f4c81;
  border-bottom: 4rpx solid #0f4c81;
}
.content {
  padding: 40rpx;
  font-size: 28rpx;
  color: #333;
}
/* 板块样式 */
.section {
  margin-bottom: 40rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.drink-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.drink-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.drink-desc {
  font-size: 25rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 40rpx;
}
.drink-tags {
  display: flex;
  flex-wrap: wrap;
}
.tag {
  background-color: #e6f7ed;
  color: #00b388;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.drink-item {
  display: flex;
  align-items: flex-start;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.drink-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.drink-text {
  flex: 1;
}